<h1>Listing deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Current price</th>
      <th>Amount accepted</th>
      <th>Amount rejected</th>
      <th>Comments</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.name %></td>
        <td><%= delivery.current_price %></td>
        <td><%= delivery.amount_accepted %></td>
        <td><%= delivery.amount_rejected %></td>
        <td><%= delivery.comments %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

