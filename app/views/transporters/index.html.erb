<header class="span8">
<h1 align="center">Showing <%=  @transporters.length %> transporters </h1>
<%= paginate @transporters %>
<%= link_to 'New Transporter', new_transporter_path, {class: "btn btn-success pull-right"} %>
</header>
<% if !@transporters.blank? %>
<table class="table table-striped pagination-centered" >

  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Id</th>
      <th>Details</th>
      <th>Add delivery</th>
    </tr>
  </thead>

  <tbody>
    <% @transporters.each do |transporter| %>
      <tr>
        <td><%= transporter.name %></td>
        <td><%= transporter.phone %></td>
        <td><%= transporter.id_number %></td>
        <td><%= link_to 'Details', transporter, {class: "btn"} %></td>
        <td><%= link_to 'Add delivery', new_delivery_path(:id => transporter.id), :class => "btn", :id => "addDeliveryBtn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% else %>
	<p>There are no transporters in the database</p>
	<%= link_to 'Add one!', new_transporter_path, {class: "btn"} %>
<% end %>
